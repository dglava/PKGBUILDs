pkgname=greybird-theme-git
pkgver=v3.22.10.r4.g50e9273
pkgrel=1
pkgdesc="Greybird GTK2/3 and Openbox themes"
arch=('any')
url="https://github.com/shimmerproject/Greybird"
license=('GPL2' 'CCPL:by-sa')
makedepends=('git')
source=('git+https://github.com/shimmerproject/Greybird.git')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/Greybird"
  git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
  install -d -m755 "$pkgdir/usr/share/themes/"

  cd "$srcdir"
  rm -rf Greybird/.git/ Greybird/.gitignore
  cp -r Greybird "$pkgdir/usr/share/themes/"

  cd ..
  cp -r openbox-3 "$pkgdir/usr/share/themes/Greybird"
}
