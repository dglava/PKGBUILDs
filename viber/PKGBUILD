pkgname=viber
pkgver=6.5.5
pkgrel=1
pkgdesc="Proprietary IM client"
arch=('x86_64')
url="https://www.viber.com"
license=('custom')
depends=('libxss' 'openssl' 'nss' 'gstreamer' 'gst-plugins-base-libs'
'gst-plugins-good' 'gst-plugins-ugly' 'gst-libav')
source=("http://download.cdn.viber.com/cdn/desktop/Linux/viber.deb"
"viber")
md5sums=('b952d0c15184e665e8603b498159e48f'
         '50fea5b020a300dc8b749069dafcc180')

prepare() {
  cd $srcdir
  tar -xf data.tar.xz
}

package() {
  cd $srcdir
  install -d "$pkgdir/opt/viber"
  cp -r "$srcdir/opt/viber" "$pkgdir/opt"
  cp -r "$srcdir/usr/" "$pkgdir"

  install -Dm 755 "$srcdir/viber" "$pkgdir/usr/bin/viber"
}
