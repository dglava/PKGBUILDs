pkgname=cheser-icon-theme-git
pkgver=3.18.1.r10.g2f4677e
pkgrel=1
pkgdesc="Tango/GNOME style icons"
arch=('any')
url="https://github.com/chekavy/cheser-icon-theme"
license=('CCPL:by-sa')
makedepends=('git')
source=('git+https://github.com/chekavy/cheser-icon-theme.git')
md5sums=('SKIP')

pkgver() {
    cd "$srcdir/${pkgname%-git}"
    git describe --long --tags | sed 's/^v//;s/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
    install -d -m755 "$pkgdir/usr/share/icons/"

    cd "$srcdir/${pkgname%-git}"
    cp -r Cheser "$pkgdir/usr/share/icons/"
}
