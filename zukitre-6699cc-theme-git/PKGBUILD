pkgname=zukitre-6699cc-theme-git
pkgver=r47.02575d8
pkgrel=1
pkgdesc="Slightly modified Zukitre GTK2/3 themes"
arch=('any')
url="https://github.com/dglava/zukitre-6699cc"
license=('GPL3')
makedepends=('git')
source=('git+https://github.com/dglava/zukitre-6699cc.git')
md5sums=('SKIP')

pkgver() {
  cd "$srcdir/${pkgname%-theme-git}"
  printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

package() {
  install -d -m755 "$pkgdir/usr/share/themes/Zukitre-6699CC"

  # remove git directory and preview picture
  rm -rf "$srcdir/${pkgname%-theme-git}/.git/"
  rm -r "$srcdir/${pkgname%-theme-git}/preview.png"

  cp -r $srcdir/${pkgname%-theme-git}/* "$pkgdir/usr/share/themes/Zukitre-6699CC"
}
