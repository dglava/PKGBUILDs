pkgname=zukitwo-theme-git
pkgver=r52.26875c5
pkgrel=1
pkgdesc="Zukitwo GTK2/3 themes"
arch=('any')
url="https://github.com/lassekongo83/zuki-themes"
license=('GPL3')
makedepends=('git')
source=('git+https://github.com/lassekongo83/zuki-themes.git'
        'fix_black_border.patch'
        'fix_overshoot.patch')
md5sums=('SKIP'
         '57cef51d6b0780b938d783963161ca08'
         '5e1d99d3768205afc4fe9d921b497fbc')

pkgver() {
    cd "$srcdir/zuki-themes"
    printf "r%s.%s" "$(git rev-list --count HEAD)" "$(git rev-parse --short HEAD)"
}

prepare() {
    patch "$srcdir/zuki-themes/Zukitwo/gtk-3.0/gtk-widgets.css" < fix_black_border.patch
    patch "$srcdir/zuki-themes/Zukitwo/gtk-3.0/gtk-widgets.css" < fix_overshoot.patch
}

package() {
    install -d -m755 "$pkgdir/usr/share/themes/"

    cd "$srcdir/zuki-themes"
    cp -r Zukitwo "$pkgdir/usr/share/themes/"
}

