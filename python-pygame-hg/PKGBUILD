pkgname=python-pygame
pkgver=1.9.2
pkgrel=1
pkgdesc="Python game library"
arch=('any')
url="http://www.pygame.org"
license=('LGPL')
depends=('python' 'sdl_mixer' 'sdl_ttf' 'sdl_image' 'portmidi' 'python-numpy')
source=("https://bitbucket.org/pygame/pygame/get/${pkgver}.tar.gz")
md5sums=('be31ec2988b5502168d8188569bb4653')

package() {
    cd "${srcdir}/pygame-pygame-2caabb5e6cae"
    python config.py -auto
    python setup.py install --root="$pkgdir"
}
