pkgname=mpv-single-instance
pkgver=1.0
pkgrel=1
pkgdesc="Single instance desktop file for mpv"
arch=('any')
url="https://github.com/dglava/pkgbuilds"
license=('GPL')
depends=('mpv')
source=("mpv_single" "mpv-single.desktop")
md5sums=('92b66e72c8a2af1e244d15ac99217603'
         'b301790b6879141002602e7c5ae559f3')

package() {
  install -d "$pkgdir/usr/bin/"
  install -d "$pkgdir/usr/share/applications"
  install -m 755 -D mpv_single "$pkgdir/usr/bin/"
  install -m 644 -D mpv-single.desktop "$pkgdir/usr/share/applications"
}
