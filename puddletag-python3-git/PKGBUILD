pkgname=puddletag-python3-git
pkgver=v1.2.0.r134.gf4c37b5
pkgrel=1
pkgdesc="A tag editor for GNU/Linux - Python 3/Qt 5 version"
arch=('any')
url="https://github.com/sandrotosi/puddletag"
license=('GPL3')
depends=('python' 'python-pyqt5' 'python-pyparsing' 'python-mutagen'
         'python-configobj' 'qt5-svg')
conflicts=('puddletag')
source=("git+https://github.com/sandrotosi/puddletag.git")
md5sums=('SKIP')

pkgver() {
  cd "${pkgname%-python3-git}"
  git describe --long --tags | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

package() {
  cd "${pkgname%-python3-git}/source"
  python setup.py install --root="${pkgdir}"
}
