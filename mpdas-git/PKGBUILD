_pkgname=mpdas
pkgname=mpdas-git
pkgver=0.3.1.r38.g90dd5f7
pkgrel=1
pkgdesc='Music scrobbler for mpd'
arch=('x86_64' 'i686')
url='https://github.com/hrkfdn/mpdas.git'
license=('BSD')
depends=('libmpdclient' 'curl')
makedepends=('git')
source=("git+https://github.com/hrkfdn/mpdas.git")
sha256sums=('SKIP')

pkgver() {
  cd "$srcdir/$_pkgname"
  git describe --long | sed 's/\([^-]*-g\)/r\1/;s/-/./g'
}

prepare() {
  cd "$srcdir/$_pkgname"
  # change config file location to ~/.config/mpdas/
  sed -i 's/path.append("\/.mpdasrc");/path.append("\/.config\/mpdas\/mpdasrc");/g' main.cpp
}

build() {
  cd "$srcdir/$_pkgname"
  make PREFIX=/usr CONFIG=/etc
}

package() {
  cd "$srcdir/$_pkgname"
  make install PREFIX="$pkgdir"/usr MANPREFIX="$pkgdir/usr/share/man/man1"
  install -Dm644 mpdasrc.example "$pkgdir/etc/mpdasrc"
  install -Dm644 LICENSE "$pkgdir/usr/share/licenses/$_pkgname/LICENSE"
}
